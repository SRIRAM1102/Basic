Task1:Personal details
class person{
    constructor(name,age,no,gender)
    {
        this.name=name;
        this.age=age;
        this.no=no;
        this.gender=gender;
    }
    details()
    {
        console.log(this.name+","+this.age+","+this.no+","+this.gender)
    }
}
