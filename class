Task2:uber
let a=new person("sri","5","99524","male");
a.details();

class price{
    constructor(dist,num,priceperkm)
    {
        this.dist=dist;
        this.num=num;
        this.price=priceperkm;
    }
    calc()
    {
        this.fare=this.dist*this.num*this.price;
        console.log(this.fare);
    }
}
let g=new price(100,2,1);
g.calc();
