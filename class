2>...
class circle
{
    constructor(radius,color)
    {
        this.radius=radius;
        this.color=color;
    }
    area()
    {
        const p=3.142857;
        let area1=p*this.radius*this.radius;
        console.log(area1);
    }
    circumference()
   {
      const p=3.142857;
      let circ=2*p*this.radius;
      console.log(circ);
    
   }
}
let a= new circle(1,"red");
a.area();
a.circumference();
