class movie{
    constructor(title,studio,rating)
    {
        this.title=title;
        this.studio=studio;
        this.rating=rating;
    }
    rated()
    {
       for(var i=0;i<this.rating.length&&this.studio.length&&this.title.length;i++)
        {
          if(this.rating[i]=="PG-13")
            {
            console.log(this.title[i],this.studio[i],this.rating[i]);
            }
        }    
    }
   
}
let a=new movie(["master","bigil","gilli","thupaki","sura","aathi"],["sun","vjProduction","velinfotainment","vff","kopuram","sjprod"],["PG","PG","PG-14","PG-13","PG","PG-13"]);
a.rated();
